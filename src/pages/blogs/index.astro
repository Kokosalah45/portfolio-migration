---
import { getCollection, getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import MainContent from "../../layouts/MainContent.astro";

const allBlogPosts = await getCollection("blog");
	

---

<Layout title='Hello to My Portfolio'>
	<slot slot='main'>
		<MainContent isFullSpan>
			<h1 class="text-4xl font-bold mb-6">Blog Posts</h1>
			<ul class="space-y-4">
				{allBlogPosts.map((post) => (
					<li  class="border p-4 rounded-lg hover:bg-gray-100 transition">
						<a href={`/blogs/${post.slug}`} class="text-xl font-semibold text-blue-600 hover:underline">
							{post.data.title}
						</a>
						<p class="text-gray-600">{post.data.description}</p>
						<span class="text-sm text-gray-500">{new Date(post.data.date).toLocaleDateString()}</span>
					</li>
				))}
			</ul>
		</MainContent>
	</slot>
</Layout>